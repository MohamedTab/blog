<div id="header" class="text-center">
	<div class="header-content">
  		<h1 style="font-size: 60px;"> <%= current_user.first_name %> <%= current_user.last_name %> </h1>
  		<h2 style="font-family: 'Lato', sans-serif;"> <span id="target"> </span><span id="cursor"></span></h2>
	</div>
</div>
<br>
<div class="row">
	<div class="col-sm-12 text-center" style="padding-bottom: 30px; margin-bottom: 30px;">
		<div class="col-sm-4" style="border-bottom: 1px solid #C2C2C2; padding-bottom: 15px; color: #C2C2C2;">
			<%= link_to "Rediger un article", new_article_path, style: "color: #C2C2C2;", data: { no_turbolink: true } %>
		</div>
		<div class="col-sm-4" style="border-bottom: 1px solid #C2C2C2; padding-bottom: 15px; color: #999999;">
			<%= link_to "Mes articles", user_my_article_path(current_user), style: "color: #C2C2C2;" %>
		</div>
		<div class="col-sm-4" style="border-bottom: 1px solid #C2C2C2; padding-bottom: 15px; color: #999999;">
			<%= link_to "Mon compte", user_my_article_path(current_user), style: "color: #C2C2C2;" %>
		</div>
	</div>

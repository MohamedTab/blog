<div style="background-color: #FFFFFF;">
  <div class="container">
    <div class="row">
      <div class="box_sign_up" >
         <div class="row">
           <div class="col-xs-12 col-sm-offset-4 col-sm-4" style="padding-top: 30px;">
          <h1 style="color:black;"> <strong>Inscription </strong></h1>
          <br>

           <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
           <%= devise_error_messages! %>
          
          <div class="form-group col-xs-12 col-sm-6 shift_left">
             <div class="field">
                <%= f.label :first_name, "Prénom" %>
                <%= f.text_field :first_name, placeholder: "Prénom", :class => "form-control" %>
             </div>
           </div>
          <div class="form-group col-xs-12 col-sm-6 shift_right">
            <div class="field">
              <%= f.label :last_name, "Nom" %>
              <%= f.text_field :last_name, placeholder: "Nom", :class => "form-control" %>
            </div>
          </div>
          <div class="form-group col-xs-12 shift_left shift_right">
            <div class="field">
              <%= f.label :email, "Email" %>
              <%= f.email_field :email, autofocus: true, :class => "form-control", placeholder: "Email" %>
            </div>
          </div>

        <div class="form-group col-xs-12 shift_left shift_right">
          <div class="field">
             <%= f.label :password, "Mot de passe" %>
             <% if @validatable %>
             <em>(<%= @minimum_password_length %> characters minimum)</em>
             <% end %><br />
             <%= f.password_field :password, autocomplete: "off", :class => "form-control", placeholder: "Mot de passe" %>
          </div>
        </div>
       <div class="form-group col-xs-12 shift_left shift_right">
         <div class="field">
           <%= f.label :password_confirmation, "Confirmation mot de passe" %><br />
           <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", placeholder: "Confirmez votre mot de passe" %>

         </div>
       </div>
       

       <div class="col-xs-12 btn_sign_mobile shift_left shift_right">
         <div class="actions text-justify" style="margin-top: 10px;">
          <p><%= f.submit "Créer un compte", class: "btn btn_sign_up btn_sign_mobile"%></p>
        <p><%= link_to "Se connecter", new_session_path(resource_name), class: "btn btn-signup"%><br /></strong></p>
    

         </div>
       </div>

       <% end %>
      </div>
    </div>
  </div>
</div>
</div>
</div>